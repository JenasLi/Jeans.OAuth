@using Jeans.OAuth.Core.Domains;
@model Credentials
@{
    ViewBag.Title = "授权配置编辑";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">授权配置编辑</div>
            <div class="panel-body">

                @using (Html.BeginForm("GrantEdit", "OAuthGrant", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        <label for="GrantTypeMode">GrantTypeMode</label>
                        @Html.DropDownListFor(m => m.GrantTypeMode, new List<SelectListItem> {
                               new SelectListItem(){ Text="AuthorizationCode",Value="AuthorizationCode"},
                               new SelectListItem(){ Text="Implicit",Value="Implicit"},
                               new SelectListItem(){ Text="Password",Value="Password"},
                               new SelectListItem(){ Text="ClientCredentials",Value="ClientCredentials"},
                           }, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="ClientId">ClientId</label>
                        @Html.TextBoxFor(m => m.ClientId, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="ClientSecret">ClientSecret</label>
                        @Html.TextBoxFor(m => m.ClientSecret, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="RedirectUri">RedirectUri</label>
                        @Html.TextBoxFor(m => m.RedirectUri, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-default">提交</button>
                }

            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>